<thead>
    <tr>
      <% @head_columns.each do |key, val| %>
        <th>
          <%= link_to "^", params.merge({:sort => "#{val[0]} asc"}), :title=> 'Asc' %>&nbsp;
          <%= val[1].to_s  %>  &nbsp;
          <%= link_to "v", params.merge({:sort => "#{val[0]} desc"}), :title=> 'Desc' %>
        </th>
      <%end%>      
      <th></th>
      <th></th>
      <th></th>
    </tr>
    
    <%= form_tag(params.merge(:action => :index), {:method => :get}) do %>
    <tr>
      <% @head_columns.each do |key, val| %>
        <th>
            <%= text_field_tag key.to_sym, params[key.to_sym], {:style => "width:125px"} %>
        </th>
      <%end%>
      <td></td>
      <th colspan='3'>
        <%= submit_tag 'Apply Filter' %>
      </th>
    </tr>
    <% end %>  

</thead>

